#!/bin/sh
# $Id: netcdf4_configure_pgf6_linux 3007 2011-09-05 15:45:37Z frdo $
#
# netcdf-4 (v4.1.x) shell script for a local configure
# USERS SHOULD MODIFY THIS SCRIPT AS REQUIRED FOR LOCAL INSTALL
#
# Compiler: pgf6 / Linux
#
PREFIX=${1-$ROPP_ROOT/pgf6}
echo
echo "Platform:"
uname -a
echo
echo "Fortran compiler:"
pgf6 --version
echo
echo "C compiler:"
gcc --version
echo
echo "Installation target:"
echo "$PREFIX"
echo
#
CXX="" \
CC=gcc       CFLAGS="-O2 -w -I$PREFIX/include"                 \
FC=pgf6     FCFLAGS="-O2 -w -I$PREFIX/include"                 \
F77=pgf6     FFLAGS="-O2 -w -I$PREFIX/include"                 \
              FLIBS="" LDFLAGS="-L$PREFIX/lib -L$PREFIX/lib64" \
  ./configure --prefix=$PREFIX   --disable-option-checking \
              --disable-cxx                                \
              --disable-v2       --disable-dap             \
              --disable-shared   --disable-largefile       \
              --enable-separate-fortran
