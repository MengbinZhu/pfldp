#!/bin/sh
# $Id: ropp_configure_nag_linux 3752 2013-07-09 18:55:03Z frdo $
#
# ROPP shell script for a local configure.
# USERS SHOULD MODIFY THIS SCRIPT AS REQUIRED FOR LOCAL INSTALL
#
# Compiler: NAG f95 / Linux
#
PREFIX=${1-$ROPP_ROOT/nag}
echo
echo "Platform:"
uname -a
echo
echo "Fortran compiler:"
f95 --version
echo
echo "C compiler:"
gcc --version
echo
echo "Installation target:"
echo "$PREFIX"
echo
#
CC=gcc \
F77=f95      FFLAGS="-O2 -I$PREFIX/include" \
FC=f95      FCFLAGS="-O2 -I$PREFIX/include" \
            LDFLAGS="-L$PREFIX/lib -L$PREFIX/lib64" \
  ./configure --prefix=$PREFIX
