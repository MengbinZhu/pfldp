#!/bin/bash
#
# $Id: buildgrib_ropp 3551 2013-02-25 09:51:28Z idculv $
#
#---------------------------------------------------------------------
# Build ECMWF GRIB-API package in ROPP_ROOT tree using (by default)
# all f95 compilers available on MetO Linux desktops,
# or a sub-set specified in a list on the command line
# e.g.:
#  > buildgrib_ropp ifort g95
#
#---------------------------------------------------------------------
#
# --- Help
#
if [[ "$1" == "-h" ]] || \
   [[ "$1" == "--help" ]]; then
  echo
  echo "Purpose: build ECMWF GRIB-API for ROPP"
  echo
  echo "Usage: buildgrib_ropp [compiler ...]"
  echo
  echo "Options: one or more F95 compiler tags"
  echo
  echo "Default: build with all compilers available on Met Office"
  echo "         Linux Desktop domain."
  echo
  echo "Installs to ROPP_ROOT/<compiler>; saves a a log file in"
  echo "ROPP_ROOT/<compiler>/buildgrib.log"
  echo
  exit
fi
#
# --- List of Fortran compilers to use
#
fclist=""
while [[ -n "$1" ]]; do fclist="$fclist $1"; shift; done
if [[ -z $fclist ]]; then
  fclist="g95 gfortran \
          ifort ifort11 ifort12 \
          nagfor pgf95 pgf11 sunf95"
fi
#
# --- Build package with each compiler in the list, with
#     output to screen & a log file
#
for fc in $fclist; do
  prefix=$ROPP_ROOT/$fc
  mkdir -p $prefix
  log=$prefix/buildgrib.log
  rm -f $log > /dev/null 2>&1
  echo " "                                                             | tee $log
  echo "-------------------------------------------------------------" | tee -a $log
  echo "Building ECMWF GRIB-API package on $(date) host $(hostname) by $USER" | tee -a $log
  echo "-------------------------------------------------------------" | tee -a $log
  echo ">> $fc"                                                        | tee -a $log
  ./buildpack grib $fc 2>&1 5>&1 6>&1                                  | tee -a $log
  if [[ $? -ne 0 ]]; then break; fi
done
#
echo "-------------------------------------------------------------"
echo "For a record of the build status, see log files:"
for fc in $fclist; do
  echo " $ROPP_ROOT/$fc/buildgrib.log"
done
#
exit

